{
  "name": "cms",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "setup": "echo '✅ CMS is ready to use! Run npm run dev to start.'",
    "db:reset": "rm -f ./data/cms.db && echo '🗑️ Database reset complete'",
    "db:backup": "cp ./data/cms.db ./data/cms.db.backup.$(date +%Y%m%d_%H%M%S) && echo '💾 Database backup created'"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/mongodb": "^4.0.7",
    "better-sqlite3": "^12.2.0",
    "mongodb": "^6.17.0",
    "next": "15.3.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "@eslint/eslintrc": "^3",
    "tsx": "^4.19.2"
  }
}
